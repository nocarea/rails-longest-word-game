<h1>Games#new</h1>
<p>
<% @letters.each do |letter| %>
  <%= letter %>
<% end %>
</p>

<form action="score">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters%>
  <label for="guess">Enter your word:</label>
  <input type="text" name="guess">
  <input type="submit">
</form>
